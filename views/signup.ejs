    <div
      class="container d-flex align-items-center justify-content-center"
      style="min-height: 100vh"
    >
      <div
        class="row justify-content-center w-100 py-5 rounded-3"
        style="box-shadow: #bc7ef0 0px 5px 15px"
      >
        <div class="col-md-4 order-3 order-md-1">
          <div class="form">
            <h2 class="text-center">Create Account</h2>
            <% if(typeof errorMessage !== 'undefined') { %>
            <div
              class="text-danger w-100 px-3 d-flex py-2 rounded"
              style="
                background-color: #f0c5be;
                font-size: 14px;
                margin-bottom: 8px;
              "
            >
              <i class="fas fa-check-circle pt-1"></i>
              <p class="my-0 px-2"><%= errorMessage %></p>
            </div>
            <% } %> <% if(typeof accountCreated !== 'undefined' &&
            accountCreated === true) { %>
            <div
              class="text-success w-100 px-3 d-flex py-2 rounded"
              style="
                background-color: #bcf5bc;
                font-size: 14px;
                margin-bottom: 8px;
              "
            >
              <i class="fas fa-check-circle pt-1"></i>
              <p class="my-0 px-2">Account Created</p>
            </div>
            <div
              class="text-success w-100 px-3 d-flex py-2 rounded"
              style="
                background-color: #bcf5bc;
                font-size: 14px;
                margin-bottom: 5px;
              "
            >
              <i class="fas fa-envelope mt-1"></i>
              <p class="my-0 px-2">Check your email and verify your account</p>
            </div>
            <% } %>
            <form action="/signup" method="POST">
              <div class="inputbox mt-3">
                <label for="name" class="form-label">Name</label>
                <input
                  type="Name"
                  class="form-control"
                  id="name"
                  name="name"
                  value="<%= typeof valueObj !== 'undefined' ? valueObj.name : '' %>"
                  required
                />
                <% if(typeof errorObj !== 'undefined' && errorObj.errorName ===
                true) { %>
                <p class="text-danger fw-bold px-1" style="font-size: 14px">
                  Invalid Name
                </p>
                <% } %>
              </div>
              <div class="inputbox mt-3">
                <label for="email" class="form-label">Email address</label>
                <input
                  type="email"
                  class="form-control"
                  id="email"
                  aria-describedby="emailHelp"
                  name="email"
                  value="<%= typeof valueObj !== 'undefined' ? valueObj.email : '' %>"
                  required
                />
                <% if(typeof errorObj !== 'undefined' && errorObj.errorEmail ===
                true) { %>
                <p class="text-danger fw-bold px-1" style="font-size: 14px">
                  Invalid Email
                </p>
                <% } %>
              </div>
              <div class="inputbox mt-3">
                <label for="password" class="form-label">Password</label>
                <input
                  type="password"
                  class="form-control"
                  id="password"
                  name="password"
                  value="<%= typeof valueObj !== 'undefined' ? valueObj.password : '' %>"
                  required
                />
              </div>
              <div
                class="d-flex justify-content-center align-items-center mt-4"
              >
                <button
                  type="submit"
                  class="btn register btn-block fw-bold"
                  style="width: 200px; background-color: #6f42c1; color: white"
                >
                  Sign Up
                </button>
              </div>
            </form>
            <div class="text-center pt-3">
              <span
                >Already have an account?
                <a href="/signin" class="fw-bold" style="color: #6f42c1"
                  >Sign in</a
                >
              </span>
            </div>
          </div>
        </div>
        <div class="col-md-6 order-1">
          <div class="text-center">
            <img
              src="/images/signup.png"
              height="450px"
              width="100%"
              style="object-fit: cover"
            />
          </div>
        </div>
      </div>
    </div>

